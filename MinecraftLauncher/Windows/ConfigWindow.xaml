<Window x:Class="MinecraftLauncher.Windows.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurações - RayzeCraft Launcher" 
        Height="500" 
        Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="../Resources/icon.ico">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="Configurações do Launcher" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- Configurações -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Nome do Jogador -->
                <GroupBox Header="Jogador" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <Label Content="Nome do Jogador:"/>
                        <TextBox x:Name="PlayerNameTextBox" 
                                 Height="30" 
                                 MaxLength="16"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Configurações de Memória -->
                <GroupBox Header="Memória RAM" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <Label Content="Memória Máxima (MB):"/>
                        <Slider x:Name="MaxMemorySlider" 
                                Minimum="1024" 
                                Maximum="8192" 
                                Value="2048" 
                                TickFrequency="512" 
                                IsSnapToTickEnabled="True"/>
                        <TextBlock x:Name="MaxMemoryText" 
                                   Text="2048 MB" 
                                   HorizontalAlignment="Center"/>
                        
                        <Label Content="Memória Mínima (MB):" Margin="0,10,0,0"/>
                        <Slider x:Name="MinMemorySlider" 
                                Minimum="512" 
                                Maximum="4096" 
                                Value="512" 
                                TickFrequency="256" 
                                IsSnapToTickEnabled="True"/>
                        <TextBlock x:Name="MinMemoryText" 
                                   Text="512 MB" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Configurações de Janela -->
                <GroupBox Header="Janela do Jogo" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <Label Content="Largura:"/>
                                <TextBox x:Name="WindowWidthTextBox" 
                                         Height="30" 
                                         Text="854"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <Label Content="Altura:"/>
                                <TextBox x:Name="WindowHeightTextBox" 
                                         Height="30" 
                                         Text="480"/>
                            </StackPanel>
                        </Grid>
                        
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,10,0,0">
                            <Button Content="854x480" 
                                    Click="SetResolution_Click" 
                                    Tag="854,480" 
                                    Margin="5"/>
                            <Button Content="1280x720" 
                                    Click="SetResolution_Click" 
                                    Tag="1280,720" 
                                    Margin="5"/>
                            <Button Content="1920x1080" 
                                    Click="SetResolution_Click" 
                                    Tag="1920,1080" 
                                    Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Configurações Java -->
                <GroupBox Header="Java" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <Label Content="Caminho do Java:"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="JavaPathTextBox" 
                                     Grid.Column="0"
                                     Height="30" 
                                     Margin="0,0,10,0"
                                     IsReadOnly="True"/>
                            <Button x:Name="BrowseJavaButton" 
                                    Grid.Column="1"
                                    Content="Procurar..." 
                                    Width="100" 
                                    Height="30" 
                                    Click="BrowseJavaButton_Click"/>
                        </Grid>
                        <TextBlock Text="Deixe vazio para detecção automática" 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   Margin="0,5,0,0"/>
                        <Button x:Name="DetectJavaButton" 
                                Content="Detectar Java Automaticamente" 
                                Width="200" 
                                Height="30" 
                                Margin="0,10,0,0" 
                                Click="DetectJavaButton_Click"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Argumentos Java -->
                <GroupBox Header="Argumentos Java (Avançado)" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <Label Content="Argumentos JVM:"/>
                        <TextBox x:Name="JvmArgumentsTextBox" 
                                 Height="60" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </GroupBox>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Botões -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="SaveButton" 
                    Content="Salvar" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0" 
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancelar" 
                    Width="100" 
                    Height="35" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
