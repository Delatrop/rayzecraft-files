<Window x:Class="MinecraftLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RayzeCraft Launcher" 
        Height="600" 
        Width="576"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="Resources/rayze2.png"
        >

    <Grid>
        <!-- Imagem de fundo -->
        <Image x:Name="BackgroundImage" 
               Source="Resources/Designer (2).jpeg" 
               Stretch="Fill" 
               Panel.ZIndex="0"/>

        <!-- Overlay escuro para melhor legibilidade -->

        <!-- Conteúdo principal -->
        <Grid Panel.ZIndex="2" HorizontalAlignment="Center" Width="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Cabeçalho -->

            <!-- Cabeçalho -->
            <!-- Cabeçalho -->

            <!-- Cabeçalho -->
            <!-- Cabeçalho -->
            <Image Margin="111,0,112,0" Grid.RowSpan="3" Source="/Designer (2).jpeg" Stretch="Fill"/>

            <!-- Cabeçalho -->
            <StackPanel Grid.Row="0" 
                        HorizontalAlignment="Center" 
                        Margin="0,40,0,0"/>

            <!-- Área central -->
            <Grid Grid.Row="1" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Painel de atualização -->
                <Border x:Name="UpdatePanel" 
                        Style="{StaticResource PanelStyle}" Margin="0,10,0,0" Grid.ColumnSpan="4">
                    <StackPanel>
                        <TextBlock x:Name="UpdateDetailText" 
                                   Text="Aguarde..." 
                                   Style="{StaticResource DetailTextStyle}" Height="25" Width="300"/>
                        <Button x:Name="UpdateButton" 
                                Content="Atualizar" 
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Click="UpdateButton_Click" Height="37"/>

                        <TextBlock x:Name="UpdateStatusText" 
                                   Text="Verificando atualizações..." 
                                   Style="{StaticResource StatusTextStyle}"/>
                        <ProgressBar x:Name="UpdateProgressBar" 
                                     Style="{StaticResource ProgressBarStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Painel de jogo -->
                <Border x:Name="GamePanel" 
                        Style="{StaticResource PanelStyle}" 
                        Visibility="Collapsed" Grid.ColumnSpan="4" Margin="0,53,0,-73">
                    <StackPanel>
                        <TextBlock Text="Pronto para jogar!" 
                                   Style="{StaticResource StatusTextStyle}"/>

                        <TextBlock x:Name="GameVersionText" 
                                   Text="Versão: 1.12.2" 
                                   Style="{StaticResource DetailTextStyle}" 
                                   Margin="0,10,0,0"/>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,30,0,0">
                            <Button x:Name="PlayButton" 
                                    Content="Entrar no Jogo" 
                                    Style="{StaticResource PrimaryButtonStyle}" 
                                    Margin="0,0,5,0" 
                                    Click="PlayButton_Click"/>
                            <Button x:Name="ConfigButton" 
                                    Content="Configurações" 
                                    Style="{StaticResource SecondaryButtonStyle}" 
                                    Margin="5,0,5,0" 
                                    Click="ConfigButton_Click"/>
                            <Button x:Name="IntegrityButton" 
                                    Content="Verificar Integridade" 
                                    Style="{StaticResource SecondaryButtonStyle}" 
                                    Margin="5,0,0,0" 
                                    Click="IntegrityButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Rodapé -->
            <Grid Grid.Row="2" 
                  Margin="20">
                <TextBlock x:Name="FooterText" 
                           Text="RayzeCraft Launcher v1.0 - Desenvolvido com ♥" 
                           Style="{StaticResource FooterTextStyle}" 
                           HorizontalAlignment="Center" Margin="0,10,0,-10" Width="260"/>
            </Grid>
            <Image Margin="297,339,297,20" Grid.RowSpan="2" Source="/rayze2.png" Stretch="Fill" Grid.Row="1"/>
        </Grid>

        <!-- Splash Screen -->
        <Border x:Name="SplashScreen" 
                Background="Black" 
                Panel.ZIndex="100" 
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <!--<Image Source="Resources/splash.png" 
                       Width="300" 
                       Height="300"/>-->
                <TextBlock Text="Carregando..." 
                           Style="{StaticResource SplashTextStyle}" 
                           Margin="0,20,0,0"/>
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="10" 
                             Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
